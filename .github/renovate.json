{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranchPatterns": [
        "main"
    ],
    "enabledManagers": [
        "composer",
        "dockerfile",
        "docker-compose",
        "devbox"
    ],
    "extends": [
        "config:best-practices",
        ":automergePatch",
        "schedule:weekends",
        "schedule:automergeEarlyMondays"
    ],
    "dependencyDashboard": true,
    "timezone": "Asia/Tokyo",
    "rangeStrategy": "bump",
    "assignAutomerge": true,
    "packageRules": [
        {
            "groupName": "Laravel",
            "groupSlug": "laravel",
            "matchPackageNames": [
                "laravel/framework"
            ]
        },
        {
            "groupName": "PHP",
            "groupSlug": "php",
            "matchPackageNames": [
                "php"
            ],
            "matchUpdateTypes": [
                "minor",
                "major"
            ]
        },
        {
            "groupName": "PHP libraries",
            "groupSlug": "php-libraries",
            "matchPackageNames": [
                "!laravel/framework",
                "!php"
            ],
            "matchManagers": [
                "composer"
            ]
        },
        {
            "groupName": "Dependencies",
            "groupSlug": "Dependencies",
            "matchManagers": [
                "!composer"
            ]
        },
        {
            "groupName": "Docker images for minor",
            "groupSlug": "docker-images",
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "groupName": "Docker images for major",
            "groupSlug": "docker-images-major",
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "major"
            ]
        }
    ]
}
