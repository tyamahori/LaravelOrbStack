{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranchPatterns": [
        "main"
    ],
    "enabledManagers": [
        "composer",
        "dockerfile",
        "docker-compose",
        "devbox",
        "custom.regex",
        "github-actions"
    ],
    "extends": [
        "config:best-practices",
        ":automergePatch",
        "schedule:weekends",
        "schedule:automergeEarlyMondays"
    ],
    "dependencyDashboard": true,
    "timezone": "Asia/Tokyo",
    "rangeStrategy": "bump",
    "assignAutomerge": true,
    "packageRules": [
        {
            "groupName": "PHP libraries",
            "groupSlug": "php-libraries",
            "matchManagers": [
                "composer"
            ],
            "ignoreDeps": [
                "laravel/framework",
                "php"
            ]
        },
        {
            "groupName": "Laravel",
            "groupSlug": "laravel",
            "matchPackageNames": [
                "laravel/framework"
            ]
        },
        {
            "groupName": "PHP",
            "groupSlug": "php",
            "matchPackageNames": [
                "php"
            ],
            "matchUpdateTypes": [
                "minor",
                "major"
            ]
        },
        {
            "groupName": "Dependencies",
            "groupSlug": "Dependencies",
            "matchManagers": [
                "!composer",
                "!github-actions"
            ]
        },
        {
            "groupName": "Docker images for minor",
            "groupSlug": "docker-images",
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "groupName": "Docker images for major",
            "groupSlug": "docker-images-major",
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "major"
            ]
        },
        {
            "groupName": "GitHub Actions",
            "groupSlug": "github-actions",
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": ["/^Dockerfile$/"],
            "matchStrings": [
                "ARG RUNN_VERSION=(?<currentValue>\\S+)"
            ],
            "depNameTemplate": "github.com/go-task/task",
            "datasourceTemplate": "go",
            "versioningTemplate": "semver-coerced"
        }
    ]
}
