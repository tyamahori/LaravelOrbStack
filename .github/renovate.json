{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranchPatterns": [
        "main"
    ],
    "enabledManagers": [
        "composer",
        "dockerfile",
        "docker-compose",
        "devbox",
        "custom.regex",
        "github-actions"
    ],
    "extends": [
        "config:best-practices",
        ":automergePatch",
        "schedule:weekends",
        "schedule:automergeEarlyMondays"
    ],
    "dependencyDashboard": true,
    "timezone": "Asia/Tokyo",
    "rangeStrategy": "bump",
    "assignAutomerge": true,
    "packageRules": [
        {
            "groupName": "PHP",
            "groupSlug": "php",
            "matchPackageNames": [
                "php"
            ],
            "matchUpdateTypes": [
                "minor",
                "major"
            ]
        },
        {
            "groupName": "Laravel",
            "groupSlug": "laravel",
            "matchManagers": [
                "composer"
            ],
            "matchPackageNames": [
                "laravel/framework"
            ]
        },
        {
            "groupName": "PHP libraries",
            "groupSlug": "php-libraries",
            "matchManagers": [
                "composer"
            ],
            "ignoreDeps": [
                "laravel/framework",
                "php"
            ]
        },
        {
            "groupName": "Devbox",
            "groupSlug": "devbox",
            "matchManagers": [
                "devbox"
            ]
        },
        {
            "groupName": "Docker images",
            "groupSlug": "docker-images",
            "matchManagers": [
                "dockerfile",
                "docker-compose",
                "custom.regex"
            ],
            "matchFileNames": [
                "**/*.Dockerfile",
                "**/Dockerfile",
                "**/compose.yaml"
            ]
        },
        {
            "groupName": "GitHub Actions",
            "groupSlug": "github-actions",
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.Dockerfile$/"
            ],
            "matchStrings": [
                "go install (?<depName>[^@]+)@(?<currentValue>v[0-9.]+)"
            ],
            "datasourceTemplate": "go",
            "versioningTemplate": "semver-coerced"
        }
    ]
}
